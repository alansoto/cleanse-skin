td input[type="text"], td textarea, td select {
	font-size: 1em;
	padding: 5px !important;
}

#customer-area {
}

#customer-area table {
    width: 100%;
}
#customer-area th {
    background: url({{ "nav-bg.png" | asset_url }}) repeat-x scroll left bottom #D0CCC5;
    color: #FFFFFF;
    padding: 8px;
    text-align: left;
}
#customer-area td {
    line-height: 22px;
    padding: 6px;
    vertical-align: middle;
}
input[type="button"], input[type="submit"], input[type="image"], button {
    cursor: pointer;
}
button, input, select, textarea {
    margin: 0;
}
select, input, textarea, button {
    font: 99% sans-serif;
}
#customer-area label {
    color: #777;
    display: block;
    float: left;
    font-weight: 400;
    height: 32px;
    line-height: 32px;
    margin: 0 20px 0 0;
    padding: 0;
    text-align: right;
    width: 135px;
}
label.large {
    width: 200px;
}
label.login {
    width: 150px;
}
input.large:focus, input.large:active {
    border: 1px solid #ABC4CE;
    box-shadow: 0 0 3px #3084CA;
}
input.large {
    border: 1px solid #E4E4E4;
    color: #666666;
    float: left;
    height: 22px;
    line-height: 22px;
    padding: 6px 10px;
    width: 378px;
}
input.cancel {
    background: none repeat scroll 0 0 transparent;
    border: 0 none;
    color: #3084CA;
    font-weight: normal;
    padding: 0;
}
input.btn, a.btn {
    background: -moz-linear-gradient(center bottom , #EBEBEB, #FFFFFF) repeat scroll 0 0 transparent;
    border: 1px solid #BBBBBB;
    border-radius: 5px 5px 5px 5px;
    box-shadow: 0 1px 0 #AAAAAA;
    color: #3A3A3A;
    font-weight: bold;
    margin: 0 auto;
    padding: 4px 6px;
    text-shadow: 0 1px 1px #FFFFFF;
    width: auto;
}
a.btn {
    color: #3A3A3A;
    display: inline-block;
    font-weight: bold;
    padding: 4px 8px;
    text-shadow: 0 1px 1px #FFFFFF;
}
.action_bottom {
    border-top: 1px solid #EDEDED;
    margin-top: 20px;
    padding-top: 20px;
    text-align: center;
}
#customer_login .action_bottom, #recover-password .action_bottom {
	border-top: none;
	margin-top: 0;
	padding-top: 0;
	text-align: left;
}
#recover-password .action_bottom .cancel {
	font-size: 1em;
}
.action_bottom span {
    vertical-align: middle;
}
.action_top {
    padding-top: 10px;
    text-align: center;
}
.action_link a {
    text-decoration: underline;
}
.action_edit a {
    padding: 0;
}
.action_delete a {
    padding: 0;
}
.action_delete {
    border-left: 1px solid #DDDDDD;
    padding-left: 6px;
}
.action_return a {
/*    display: inline-block;
    left: 0;
    position: absolute;*/
}
.address {
    padding-top: 20px;
}
.address_form {
    padding: 2px 0;
    width: 280px;
}
.address_table {
    border-bottom: 1px dotted #DDDDDD;
    padding: 20px 0;
}
.address_title {
    padding-bottom: 5px;
}
.cancelled_order, .cancelled_order a {
    color: #BBBBBB;
}
.customer_address form {
    background: #F9F9F9;
    display: block;
    padding: 15px;
}
.customer_address .view_address {
    padding-top: 15px;
}
.customer_address .view_address p {
	margin-bottom: 0;
}
.default_address {
    font-style: italic;
}
.even {
    background-color: #f9f9f9;
}
.flash {
    color: #000000;
    padding: 8px 10px;
    text-align: center;
    font-size: 1.3em;
    font-weight: bold;
}
.flash.notice {
    background-color: #FFFBE5;
    border: 1px solid #DFDBC5;
}
.flash.error {
    background-color: #FFEFEB;
    border: 1px solid #F96F96;
}
.group {
    background-color: #f9f9f9;
    /*border: 1px solid #ECECEC;*/
    padding: 20px;
}
.large_form {
    margin: 0 auto 20px;
    width: 790px;
}
.note {
    color: #777777;
    font-weight: normal;
}
.note_first {
    font-weight: bold;
}
.order_date {
	font-size: 1.3em;
	font-style: italic;
	padding-top: 3px;
}
.order_number {
    width: 100px;
}
.order_section_title {
    padding-bottom: 15px;
}
.order_summary {
    color: #222222;
}
.order_summary .label {
    padding: 10px 35px 10px 0;
    text-align: right;
}
.order_summary td {
    border: medium none;
}
#order_details th.total, #customer_orders th.total {
	text-align: right;
}
#order_details .quantity {
	text-align: center;
}
.order_total td {
    border-top: 1px dotted #D0CCC5;
    font-size: 1.6em;
    padding: 10px 6px !important;
}
.status_paid, .status_authorized, .status_filed, .status_pending, .status_abandoned, .status_fulfilled, .status_partial, .status_unfulfilled, .status_restocked, .status_voided, .status_refunded {
    border-radius: 3px 3px 3px 3px;
    font-size: 12px;
    margin: 0;
    padding: 1px 4px;
}
.status_paid, .status_authorized, .status_fulfilled {
    background-color: #80BD4E;
    color: #FFFFFF;
}
.status_filed, .status_pending, .status_unfulfilled {
    background-color: #EEEEEE;
    color: #000000;
}
.status_abandoned, .status_voided, .status_refunded, .status_restocked {
    background-color: #AF9C7E;
    color: #FFFFFF;
}
.total {
    text-align: right;
}
.value {
    text-align: left;
}
.value, .label {
    vertical-align: middle;
}
#add_address_title {
	margin: 5px 0 15px 157px;
}
#add_address {
	margin-top: 20px;
}
#add_address .label, #address_tables .label {
    color: #777777;
    font-size: 1.3em;
    text-align: right;
    width: 100px;
}
#add_address td, #address_tables td {
    padding: 2px 0;
}
#add_address td, #address_tables td {
    border: medium none;
}
#address_pagination {
    padding-top: 20px;
}
#admin_header {
	padding-bottom: 20px;
    border-bottom: 1px solid #EEEEEE;
    margin-bottom: 28px;
}
#admin_header .title {
	float: left;
	margin: 0;
}
#admin_header .action_link {
	float: right;
	line-height: 36px;
	font-size: 1.3em;
}
#badtoken {
    width: 200px;
}
#container {
    margin: 30px auto 0;
    position: relative;
    width: 960px;
}
#customer, #recover-password {
    width: 600px;
}
#customer, #guest {
    display: inline-block;
    height: 260px;
    vertical-align: top;
}
#customer_detail .name {
    padding-bottom: 5px;
}
#customer_sidebar {
    float: left;
    padding-right: 30px;
    text-align: left;
    width: 200px;
}
#customer_orders {
    width: 690px !important;
}
#customer_orders .date {
    width: 125px;
}
#forgot_password a {
    background-color: #F5F5F5;
    border-color: #E8E8E8;
    border-radius: 0 5px 5px 0;
    border-style: solid solid solid none;
    border-width: 1px 1px 1px medium;
    color: #777;
    display: block;
    float: left;
    height: 34px;
    line-height: 34px;
    text-align: center;
    width: 203px;
}
#forgot_password a:hover {
    background-color: #F3F3F3;
    color: #555;
    text-decoration: underline;
}

#guest {
    border-right: 1px solid #f9f9f9;
    margin-right: 25px;
    padding-right: 25px;
    width: 265px;
}
#login_password input[type="password"] {
    width: 174px;
}
#logout {
    font-size: 11px;
    position: absolute;
    right: 0;
    top: 0;
}
#order_address {
    float: left;
    width: 220px;
}
#order_address h4, #customer_detail h4 {
	margin: 0 0 4px 0;
	padding: 0;
}
#order_payment {
	margin-bottom: 20px;
}
.status {
	margin-bottom: -5px;
	padding-bottom: 10px;
	border-bottom: 1px solid #ECECEC;
	color: #777;
}
#customer_detail .status {
	margin-top: -4px;
}
#view_address {
	font-size: 1.3em;
	text-decoration: underline;
}
.address p {
    margin: 0;
}
#order_cancelled {
    border-radius: 3px 3px 3px 3px;
    margin-bottom: 20px;
}
#order_cancelled_title {
}
#order_details {
    width: 668px !important;
}
#order_details, #order_notes {
    float: left;
    margin: 0 0 0 30px;
}
#order_details .money {
    white-space: nowrap;
}
#order_notes {
    width: 580px;
}
#tagline {
    font-weight: normal;
}
#tagline .subtitle {
    color: #888888;
    font-size: 14px;
}
#template {
}
.template_header {
    padding-bottom: 10px;
}
.template_header .title {
    font-weight: normal;
}
#view_address {
    display: block;
    margin-top: 15px;
}
#wrapper {
    background-color: #FFFFFF;
    border: 1px solid #CCCCCC;
    box-shadow: 0 2px 3px #BBBBBB;
    margin: 10px auto 0;
    padding: 40px 30px;
}
.clearfix:before, .clearfix:after {
    content: " ";
    display: block;
    height: 0;
    overflow: hidden;
}
.clearfix:after {
    clear: both;
}
.clearfix {
}



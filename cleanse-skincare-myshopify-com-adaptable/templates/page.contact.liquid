<!-- Begin content -->
<div id="content" class="formatted">

	<h1 class="title">{{ page.title | escape }}</h1>

	{{ page.content }}
	
	<div class="clear"></div>
	
	<div class="form-box round-me">
	
	{% form 'contact' %}

{% if form.posted_successfully? %}
<div class="successForm feedback round-me">
  <p>Thanks for contacting us! We'll get back to you as soon as possible.</p>
</div>
{% endif %}

{% if form.errors %}
<div class="errorForm feedback round-me">
  <!-- {{ form.errors.size }} or {{ form.errors | size }} -->
  <p>Oops, sorry. We were unable to submit your inquiry because it contained {{ form.errors | size | pluralize: 'an error', 'a few errors' }}. Please correct the following and submit again:</p>
  {% for field in form.errors %}
    <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
  {% endfor %}
</div>
{% endif %}
 
<div id="contactFormWrapper">
  <p>
    <label>Your Name:</label><br/>
    <input type="text" id="contactFormName" name="contact[name]" placeholder="" />
  </p>
  <p>
    <label>Your Email:</label><br/>
    <input type="email" id="contactFormEmail" name="contact[email]" placeholder="" />
  </p>
  <!--<p>
    <label>Your Phone Number:</label><br/>
    <input type="telephone" id="contactFormTelephone" name="contact[phone]" placeholder="" />
  </p> -->
  <p>
    <label>Message:</label><br/>
    <textarea rows="7" cols="55" id="contactFormMessage" name="contact[body]" placeholder=""></textarea>
  </p>
  <div class="button-wrapper">
  <input type="submit" class="button" id="contactFormSubmit" value="Send" />
  </div>
  <div class="clear"></div>
</div><!-- contactWrapper -->

{% endform %}

</div><div class="clear"></div>

</div>
<!-- End content -->
{% layout settings.customer_layout %}

<div id="content">
<div id="customer-area">

<div id="template">
  <div class="template_header formatted">
    <h1 class="title">Activate Account</h1>
    <p class="note">Create your password to activate your account</p>
  </div>

    <div class="grey-box">
  {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <label class="large" for="password">Password</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <label class="large" for="password_confirmation">Password Confirmation</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
      <div class="action_bottom">
        <div class="button-wrapper"><input type="submit" class="button" value="Activate Account"></div>
        <div class="cancel">&nbsp; or &nbsp;&nbsp;</div>
        <div class="button-wrapper"><input type="submit" class="button" name="decline" id="customer_decline" value="Decline Invitation"></div>
        <div class="clear"></div>
      </div>
  {% endform %}
  </div>
</div>

</div>
</div>